{
  "name": "appropiate",
  "description": "API en Nest.js",
  "website": "https://appropiate.cl/",
  "repository": "https://github.com/IgnacioPerezGullermo/appropiate",
  "logo": "https://app.tooljet.io/assets/images/logo.svg",
  "success_url": "/",
  "scripts": {
    "predeploy": "npm install && npm run build",
    "web": "npm run start:prod"
  },
